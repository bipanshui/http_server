{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    /* Output */
    "sourceMap": true,

    /* Strictness */
    "strict": true,

    /* Interop */
    "esModuleInterop": true,

    /* Quality */
    "skipLibCheck": true
  }
}
